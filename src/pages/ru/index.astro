---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";

const jsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebSite",
      name: "moldovawebsite.md",
      url: "https://moldovawebsite.md/ru/",
      inLanguage: "ru-MD",
      potentialAction: {
        "@type": "SearchAction",
        target: "https://moldovawebsite.md/ru/poisk?q={search_term_string}",
        "query-input": "required name=search_term_string",
      },
    },
    {
      "@type": "ProfessionalService",
      name: "moldovawebsite.md",
      description:
        "Создание недорогих сайтов в Молдове, доступный веб-дизайн в Кишиневе: сайты-визитки, интернет-магазины, SEO на странице, обслуживание.",
      areaServed: { "@type": "Country", name: "Молдова" },
      url: "https://moldovawebsite.md/ru/",
      email: "contact@moldovawebsite.md",
      telephone: "+37361211739",
      address: {
        "@type": "PostalAddress",
        streetAddress: "ул. Иоана Раду 27/2",
        addressLocality: "Кишинев",
        addressCountry: "MD",
      },
    },
    {
      "@type": "FAQPage",
      mainEntity: [
        {
          "@type": "Question",
          name: "Можно ли получить недорогой сайт без ущерба для качества?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Да. Мы используем оптимизированные компоненты и эффективный процесс, чтобы быстро создать современный сайт по доступной цене.",
          },
        },
        {
          "@type": "Question",
          name: "Вы работаете в Кишиневе и по всей Молдове?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Да. Мы предлагаем локальные услуги в Кишиневе и сотрудничаем онлайн с клиентами по всей Молдове.",
          },
        },
        {
          "@type": "Question",
          name: "Вы включаете SEO на странице?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Да. Мы настраиваем мета-теги, правильную структуру, скорость страниц и схему JSON-LD для лучшей видимости в поисковых системах.",
          },
        },
      ],
    },
  ],
};
