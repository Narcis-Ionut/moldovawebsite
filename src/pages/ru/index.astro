        color: #fff;
        margin-bottom: 1rem;
      }

      .dev-section p {
        color: var(--dev-text-muted);
        font-size: 1.125rem;
      }

      .dev-services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
      }

      .dev-service-card {
        background: var(--dev-surface-2);
        border: 1px solid var(--dev-border);
        border-radius: 16px;
        padding: 2rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
      }

      .dev-service-card::before {
        content: "";
