      .dev-section-tag {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(168, 85, 247, 0.1);
        border: 1px solid rgba(168, 85, 247, 0.2);
        border-radius: 9999px;
        font-size: 0.875rem;
        color: var(--dev-accent-2);
        margin-bottom: 1rem;
        font-family: "JetBrains Mono", monospace;
