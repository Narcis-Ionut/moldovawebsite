      lang="ru"
      ogLocale="ru_MD"
      hreflangRo="https://moldovawebsite.md/"
      hreflangRu="https://moldovawebsite.md/ru/"
      jsonLd={jsonLd}
    />
    
  </head>
  <body class="dev-theme">
    <div class="dev-grid-pattern"></div>
    <Header lang="ru" />

    <!-- Hero Section -->
    <section class="dev-hero" id="acasa">
      <div class="container">
        <div class="dev-hero-grid">
