    <style>
      /* ============================================
         DEV THEME - PROFESSIONAL REDESIGN
         Dark mode developer aesthetic with vibrant accents
         ============================================ */

      :root {
        --dev-bg: #ffffff;
        --dev-surface: #fafafa;
        --dev-surface-2: #f5f5f5;
        --dev-border: #e5e5e5;
        --dev-text: #141414;
        --dev-text-muted: #666666;
        --dev-accent: #e50914;
        --dev-accent-2: #b20710;
        --dev-accent-3: #ff6b6b;
        --dev-success: #16a34a;
        --dev-warning: #fbbf24;
        --dev-glow: rgba(34, 211, 238, 0.15);
        --dev-gradient: linear-gradient(
          135deg,
          #22d3ee 0%,
          #a855f7 50%,
          #f472b6 100%
        );
      }

      /* Hero Section - Terminal Style */
      .dev-hero {
        min-height: 100vh;
        display: flex;
        align-items: center;
        position: relative;
        overflow: hidden;
        background: var(--dev-bg);
        padding-top: 80px;
      }

      .dev-hero::before {
        content: "";
        position: absolute;
        inset: 0;
        background:
          radial-gradient(
            ellipse 80% 50% at 50% -20%,
            rgba(34, 211, 238, 0.15),
            transparent
          ),
          radial-gradient(
            ellipse 60% 40% at 80% 60%,
            rgba(168, 85, 247, 0.1),
            transparent
          ),
          radial-gradient(
            ellipse 40% 30% at 20% 80%,
            rgba(244, 114, 182, 0.08),
            transparent
          );
        pointer-events: none;
      }

      .dev-hero-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
        position: relative;
        z-index: 1;
      }

      .dev-hero-content {
        max-width: 600px;
      }

      .dev-hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(34, 211, 238, 0.1);
        border: 1px solid rgba(34, 211, 238, 0.2);
        border-radius: 9999px;
        font-size: 0.875rem;
        color: var(--dev-accent);
        margin-bottom: 1.5rem;
        font-family: "JetBrains Mono", monospace;
      }

      .dev-hero-badge::before {
        content: "";
        width: 8px;
        height: 8px;
        background: var(--dev-success);
        border-radius: 50%;
        animation: pulse 2s infinite;
      }

      @keyframes pulse {
        0%,
        100% {
          opacity: 1;
        }
        50% {
          opacity: 0.5;
        }
      }

      .dev-hero h1 {
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 800;
        line-height: 1.1;
        color: #fff;
        margin-bottom: 1.5rem;
        background: linear-gradient(135deg, #fff 0%, #a5f3fc 50%, #c084fc 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .dev-hero h1 span {
        display: block;
        font-size: 0.6em;
        font-weight: 500;
        color: var(--dev-text-muted);
        margin-top: 0.5rem;
        -webkit-text-fill-color: var(--dev-text-muted);
      }

      .dev-hero-subtitle {
        font-size: 1.125rem;
        color: var(--dev-text-muted);
        margin-bottom: 2rem;
        line-height: 1.7;
      }

      .dev-hero-subtitle strong {
        color: var(--dev-text);
        font-weight: 600;
      }

      .dev-hero-actions {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        margin-bottom: 2.5rem;
      }

      .dev-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem 2rem;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 12px;
        transition: all 0.3s ease;
        text-decoration: none;
        border: none;
        cursor: pointer;
      }

      .dev-btn-primary {
        background: var(--dev-gradient);
        color: #fff;
        box-shadow: 0 4px 20px rgba(34, 211, 238, 0.3);
      }

      .dev-btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(34, 211, 238, 0.4);
      }

      .dev-btn-secondary {
        background: transparent;
        color: var(--dev-text);
        border: 1px solid var(--dev-border);
      }

      .dev-btn-secondary:hover {
        background: var(--dev-surface-2);
        border-color: var(--dev-accent);
      }

      .dev-hero-stats {
        display: flex;
        gap: 2rem;
        padding-top: 2rem;
        border-top: 1px solid var(--dev-border);
      }

      .dev-stat {
        text-align: left;
      }

      .dev-stat-value {
        font-size: 2rem;
        font-weight: 800;
        color: var(--dev-accent);
        font-family: "JetBrains Mono", monospace;
      }

      .dev-stat-label {
        font-size: 0.875rem;
        color: var(--dev-text-muted);
      }

      /* Terminal Window */
      .dev-terminal {
        background: var(--dev-surface);
        border-radius: 16px;
        border: 1px solid var(--dev-border);
        overflow: hidden;
        box-shadow:
          0 25px 50px -12px rgba(0, 0, 0, 0.5),
          0 0 0 1px rgba(255, 255, 255, 0.05);
      }

      .dev-terminal-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem 1.25rem;
        background: var(--dev-surface-2);
        border-bottom: 1px solid var(--dev-border);
      }

      .dev-terminal-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
      }

      .dev-terminal-dot.red {
        background: #ff5f56;
      }
      .dev-terminal-dot.yellow {
        background: #ffbd2e;
      }
      .dev-terminal-dot.green {
        background: #27ca40;
      }

      .dev-terminal-title {
        margin-left: 0.75rem;
        font-size: 0.875rem;
        color: var(--dev-text-muted);
        font-family: "JetBrains Mono", monospace;
      }

      .dev-terminal-body {
        padding: 1.5rem;
        font-family: "JetBrains Mono", monospace;
        font-size: 0.875rem;
        line-height: 1.8;
      }

      .dev-terminal-line {
        display: flex;
        gap: 0.75rem;
        margin-bottom: 0.25rem;
      }

      .dev-terminal-prompt {
        color: var(--dev-success);
        white-space: nowrap;
      }

      .dev-terminal-command {
        color: var(--dev-text);
      }

      .dev-terminal-output {
        color: var(--dev-text-muted);
        margin-bottom: 1rem;
        padding-left: 1.5rem;
      }

      .dev-terminal-cursor {
        display: inline-block;
        width: 8px;
        height: 1.2em;
        background: var(--dev-accent);
        animation: blink 1s infinite;
        vertical-align: middle;
        margin-left: 2px;
      }

      @keyframes blink {
        0%,
        50% {
          opacity: 1;
        }
        51%,
        100% {
          opacity: 0;
        }
      }

      /* Services Section */
      .dev-section {
        padding: 6rem 0;
        background: var(--dev-bg);
        position: relative;
      }

      .dev-section-alt {
        background: var(--dev-surface);
      }

      .dev-section-header {
        text-align: center;
        max-width: 800px;
        margin: 0 auto 4rem;
