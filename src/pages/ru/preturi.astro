    <style>
      /* Dark Dev Theme - Prices Page */
      :root {
        --dev-bg: #0a0a0f;
        --dev-surface: #12121a;
        --dev-surface-2: #1a1a25;
        --dev-border: #2a2a3a;
        --dev-text: #e4e4e7;
        --dev-text-muted: #71717a;
        --dev-accent: #22d3ee;
        --dev-accent-2: #a855f7;
        --dev-accent-3: #f472b6;
        --dev-success: #34d399;
        --dev-gradient: linear-gradient(
          135deg,
          #22d3ee 0%,
          #a855f7 50%,
          #f472b6 100%
        );
      }

      .dev-section {
        padding: 5rem 0;
        background: var(--dev-bg);
        position: relative;
      }

      .dev-section-alt {
        background: var(--dev-surface);
      }

      .dev-section-header {
        text-align: center;
        max-width: 800px;
        margin: 0 auto 3rem;
      }

      .dev-section-tag {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(34, 211, 238, 0.1);
        border: 1px solid rgba(34, 211, 238, 0.2);
        border-radius: 9999px;
        font-size: 0.875rem;
        color: var(--dev-accent);
        margin-bottom: 1rem;
        font-family: "JetBrains Mono", monospace;
      }

      .dev-section h2 {
        font-size: clamp(1.75rem, 4vw, 2.5rem);
        font-weight: 800;
        color: #fff;
        margin-bottom: 1rem;
      }

      .dev-section p {
        color: var(--dev-text-muted);
        font-size: 1.1rem;
      }

      /* Hero */
      .dev-hero {
        min-height: 50vh;
        display: flex;
        align-items: center;
        background: var(--dev-bg);
        padding-top: 120px;
        position: relative;
        overflow: hidden;
      }

      .dev-hero::before {
        content: "";
        position: absolute;
        inset: 0;
        background:
          radial-gradient(
            ellipse 80% 50% at 50% -20%,
            rgba(34, 211, 238, 0.1),
            transparent
          ),
          radial-gradient(
            ellipse 60% 40% at 80% 60%,
            rgba(168, 85, 247, 0.08),
            transparent
          );
        pointer-events: none;
      }

      .dev-hero-content {
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
      }

      .dev-hero h1 {
        font-size: clamp(2rem, 5vw, 3rem);
        font-weight: 800;
        line-height: 1.1;
        color: #fff;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #fff 0%, #a5f3fc 50%, #c084fc 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .dev-hero p {
        color: var(--dev-text-muted);
        font-size: 1.125rem;
        margin-bottom: 0.5rem;
      }

      /* Breadcrumbs */
      .dev-breadcrumbs {
        padding: 1rem 0;
        background: var(--dev-surface);
        border-bottom: 1px solid var(--dev-border);
      }

      .dev-breadcrumbs ol {
        list-style: none;
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        margin: 0;
        padding: 0;
      }

      .dev-breadcrumbs a {
        color: var(--dev-accent);
        text-decoration: none;
      }

      .dev-breadcrumbs [aria-current] {
        color: var(--dev-text-muted);
      }

      /* Pricing Grid */
      .dev-pricing-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 1.5rem;
        max-width: 1200px;
        margin: 0 auto;
      }

      .dev-price-card {
        background: var(--dev-surface-2);
        border: 1px solid var(--dev-border);
        border-radius: 16px;
        padding: 2rem;
        position: relative;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
      }

      .dev-price-card.featured {
        border-color: var(--dev-accent);
        box-shadow: 0 0 30px rgba(34, 211, 238, 0.1);
      }

      .dev-price-card.featured::before {
        content: "Recomandat";
        position: absolute;
        top: -1px;
        left: 50%;
        transform: translateX(-50%);
        padding: 0.375rem 1rem;
        background: var(--dev-accent);
        color: #000;
        font-size: 0.75rem;
        font-weight: 700;
        border-radius: 0 0 8px 8px;
        font-family: "JetBrains Mono", monospace;
      }

      .dev-price-card:hover {
        transform: translateY(-4px);
        border-color: var(--dev-accent);
      }

      .dev-price-card h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 0.5rem;
      }

      .dev-price {
        font-size: 3rem;
        font-weight: 800;
        background: var(--dev-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-family: "JetBrains Mono", monospace;
        margin-bottom: 0.5rem;
      }

      .dev-price-card > p {
        color: var(--dev-text-muted);
        font-size: 0.95rem;
        margin-bottom: 1.5rem;
      }

      .dev-price-features {
        list-style: none;
        margin: 0 0 1.5rem 0;
        padding: 0;
        flex-grow: 1;
      }

      .dev-price-features li {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        padding: 0.625rem 0;
        color: var(--dev-text);
        font-size: 0.9rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
      }

      .dev-price-features li::before {
        content: "✓";
        color: var(--dev-success);
        font-weight: 700;
      }

      .dev-price-note {
        font-size: 0.8rem;
        color: var(--dev-text-muted);
        margin-bottom: 1.5rem;
      }

      .dev-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 1rem 2rem;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 12px;
        transition: all 0.3s ease;
        text-decoration: none;
        border: none;
        cursor: pointer;
        width: 100%;
      }

      .dev-btn-primary {
        background: var(--dev-gradient);
        color: #fff;
        box-shadow: 0 4px 20px rgba(34, 211, 238, 0.3);
      }

      .dev-btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(34, 211, 238, 0.4);
      }

      /* Info Grid */
      .dev-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
      }

      .dev-info-card {
        background: var(--dev-surface-2);
        border: 1px solid var(--dev-border);
        border-radius: 16px;
        padding: 1.75rem;
        transition: all 0.3s ease;
      }

      .dev-info-card:hover {
        border-color: var(--dev-accent-2);
      }

      .dev-info-card h3 {
        font-size: 1.1rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 0.75rem;
      }

      .dev-info-card p {
        color: var(--dev-text-muted);
        font-size: 0.9rem;
        line-height: 1.6;
        margin: 0;
      }

      /* FAQ */
      .dev-faq-list {
        max-width: 800px;
        margin: 0 auto;
      }

      .dev-faq-item {
        background: var(--dev-surface-2);
        border: 1px solid var(--dev-border);
        border-radius: 12px;
        margin-bottom: 1rem;
        overflow: hidden;
        transition: all 0.3s ease;
      }

      .dev-faq-item[open] {
        border-color: var(--dev-accent);
      }

      .dev-faq-item summary {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1.25rem 1.5rem;
        cursor: pointer;
        font-weight: 600;
        color: #fff;
        list-style: none;
        transition: color 0.3s ease;
      }

      .dev-faq-item summary::-webkit-details-marker {
        display: none;
      }

      .dev-faq-item summary::after {
        content: "+";
        font-size: 1.5rem;
        color: var(--dev-accent);
        font-family: "JetBrains Mono", monospace;
        transition: transform 0.3s ease;
      }

      .dev-faq-item[open] summary::after {
        transform: rotate(45deg);
      }

      .dev-faq-item summary:hover {
        color: var(--dev-accent);
      }

      .dev-faq-item p {
        padding: 0 1.5rem 1.5rem;
        color: var(--dev-text-muted);
        line-height: 1.7;
        margin: 0;
      }

      /* CTA Section */
      .dev-cta {
        padding: 5rem 0;
        background: var(--dev-surface);
        position: relative;
        overflow: hidden;
      }

      .dev-cta::before {
        content: "";
        position: absolute;
        inset: 0;
        background:
          radial-gradient(
            ellipse 60% 40% at 50% 100%,
            rgba(34, 211, 238, 0.1),
            transparent
          ),
          radial-gradient(
            ellipse 40% 30% at 20% 50%,
            rgba(168, 85, 247, 0.08),
            transparent
          );
        pointer-events: none;
      }

      .dev-cta-content {
        text-align: center;
        max-width: 700px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
      }

      .dev-cta h2 {
        font-size: clamp(1.75rem, 4vw, 2.5rem);
        font-weight: 800;
        color: #fff;
        margin-bottom: 1rem;
      }

      .dev-cta p {
        color: var(--dev-text-muted);
        font-size: 1.125rem;
        margin-bottom: 2rem;
      }

      /* Grid Pattern */
      .dev-grid-pattern {
        position: fixed;
