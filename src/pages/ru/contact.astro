---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_URL } from "../../consts";

const jsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "ContactPage",
      name: "Контакты",
      url: "https://moldovawebsite.md/ru/contact/",
      inLanguage: "ru-MD",
      about: {
        "@type": "ProfessionalService",
        name: "moldovawebsite.md",
      },
    },
  ],
};

const features = [
  {
    icon: "💰",
    title: "Доступные цены",
    description:
      "Мы предлагаем качественные веб-решения по ценам, которые подходят бюджету любого малого бизнеса в Молдове. Профессиональные сайты от 150 EUR.",
  },
  {
    icon: "⚡",
    title: "Быстрая разработка",
    description:
      "Сайт-визитка стандартной сложности готов за 7–14 рабочих дней, а для срочных проектов доступны ускоренные опции.",
