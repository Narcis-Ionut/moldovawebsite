];

const process = [
  {
    number: "01",
    title: "Первичная беседа",
    description:
      "Вы рассказываете, что нужно, какой бюджет и сроки. Мы отвечаем бесплатной оценкой в тот же рабочий день.",
  },
  {
    number: "02",
    title: "Предложение и договор",
    description:
      "Вы получаете детальное предложение с объемом работ, сроками и ценой. После согласования подписываем простой договор и начинаем работу.",
  },
  {
    number: "03",
    title: "Разработка",
    description:
      "Создаем сайт согласно спецификации и регулярно информируем о прогрессе. Вы можете видеть рабочую версию в любое время.",
  },
  {
    number: "04",
    title: "Запуск",
    description:
      "После тестирования и вашего финального одобрения публикуем сайт, настраиваем домен и хостинг и обучаем управлению.",
  },
];

const services = [
  {
    title: "Сайт-визитка",
    description:
      "Профессиональные сайты для малого и среднего бизнеса. Обычно включают страницы: Главная, О нас, Услуги, Портфолио, Контакты и опциональный блог.",
  },
  {
    title: "Интернет-магазин",
    description:
      "Полноценные e-commerce решения с каталогом, корзиной, онлайн-оплатой, управлением товарами и заказами.",
  },
  {
    title: "Лендинг",
    description:
      "Целевые страницы для маркетинговых кампаний с фокусом на конверсию и четкие призывы к действию.",
  },
  {
    title: "Редизайн сайта",
    description:
      "Обновляем существующий сайт современным дизайном, улучшенной скоростью и SEO-оптимизацией.",
  },
