    <script>
      // Chip selection
      document.querySelectorAll(".dev-chip").forEach((chip) => {
        chip.addEventListener("click", () => {
          document
            .querySelectorAll(".dev-chip")
            .forEach((c) => c.classList.remove("active"));
          chip.classList.add("active");
          const projectType = document.getElementById("project_type");
          if (projectType && "value" in projectType) {
            projectType.value = (chip as HTMLElement).dataset.value || "";
          }
        });
      });

      // Budget range
      const budgetRange = document.getElementById(
        "budget",
      ) as HTMLInputElement | null;
      const budgetBadge = document.getElementById("budgetBadge");
      budgetRange?.addEventListener("input", (e) => {
        const target = e.target as HTMLInputElement;
        if (budgetBadge) {
          budgetBadge.textContent = `€${target.value}`;
        }
      });

      // Form submission
      const form = document.getElementById(
        "contactForm",
      ) as HTMLFormElement | null;
      const formStatus = document.getElementById("formStatus");

      form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const submitBtn = form.querySelector(
          ".dev-submit",
        ) as HTMLButtonElement | null;
        if (!submitBtn) return;

        submitBtn.disabled = true;
        submitBtn.textContent = "Отправка...";

        try {
          const formData = new FormData(form);
          const response = await fetch("/api/contact", {
            method: "POST",
            body: formData,
          });

          if (response.ok) {
            if (formStatus) {
              formStatus.textContent =
                "Сообщение отправлено! Мы свяжемся с вами в ближайшее время.";
              formStatus.style.color = "#34d399";
            }
            form.reset();
          } else {
            throw new Error("Ошибка отправки");
          }
        } catch (error) {
          if (formStatus) {
            formStatus.textContent =
              "Произошла ошибка. Попробуйте еще раз или свяжитесь с нами напрямую.";
            formStatus.style.color = "#ef4444";
          }
        } finally {
          submitBtn.disabled = false;
          submitBtn.textContent = "Отправить сообщение";
        }
      });
    </script>
