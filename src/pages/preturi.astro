---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_URL } from "../consts";

const jsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "BreadcrumbList",
      itemListElement: [
        {
          "@type": "ListItem",
          position: 1,
          name: "Acasă",
          item: "https://moldovawebsite.md/",
        },
        {
          "@type": "ListItem",
          position: 2,
          name: "Prețuri",
          item: "https://moldovawebsite.md/preturi/",
        },
      ],
    },
    {
      "@type": "OfferCatalog",
      name: "Pachete creare site web - Moldova",
      url: "https://moldovawebsite.md/preturi/",
      itemListElement: [
        {
          "@type": "Offer",
          name: "Basic",
          url: "https://moldovawebsite.md/preturi/#pachet-basic",
          price: "50",
          priceCurrency: "EUR",
          availability: "https://schema.org/InStock",
          itemOffered: {
            "@type": "Service",
            name: "Landing page (1 pagină)",
            areaServed: { "@type": "Country", name: "Moldova" },
          },
        },
        {
          "@type": "Offer",
          name: "Standard",
          url: "https://moldovawebsite.md/preturi/#pachet-standard",
          price: "150",
          priceCurrency: "EUR",
          availability: "https://schema.org/InStock",
          itemOffered: {
            "@type": "Service",
            name: "Site de prezentare (până la 5 pagini)",
            areaServed: { "@type": "Country", name: "Moldova" },
          },
        },
        {
          "@type": "Offer",
          name: "Pro",
          url: "https://moldovawebsite.md/preturi/#pachet-pro",
          price: "300",
          priceCurrency: "EUR",
          availability: "https://schema.org/InStock",
          itemOffered: {
            "@type": "Service",
            name: "Site avansat / mini-magazin",
            areaServed: { "@type": "Country", name: "Moldova" },
          },
        },
      ],
    },
    {
      "@type": "FAQPage",
      mainEntity: [
        {
          "@type": "Question",
          name: "De ce prețurile sunt atât de accesibile?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Prețuri mici nu înseamnă calitate scăzută. Folosim tehnologii moderne (Astro, componente pre-optimizate, hosting Cloudflare) care reduc drastic timpul de dezvoltare – nu calitatea. Fiecare site primește aceeași atenție la detalii: design modern, cod curat și SEO on-page.",
          },
        },
        {
          "@type": "Question",
          name: "Pot plăti în MDL sau în două tranșe?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Da. Facturarea se poate face în EUR sau echivalent MDL. Pentru pachetele Standard/Pro acceptăm și plata în două tranșe (50% avans, 50% la livrare).",
          },
        },
        {
          "@type": "Question",
          name: "Ce include SEO on-page?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Meta-taguri, structură corectă (H1–H3), optimizare viteză, schema JSON-LD și configurări de bază pentru indexare.",
          },
        },
        {
          "@type": "Question",
          name: "Domeniul și găzduirea sunt incluse?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Nu. Îți recomandăm opțiuni potrivite bugetului și te ajutăm cu configurarea (DNS, SSL, e-mailuri).",
          },
        },
        {
          "@type": "Question",
          name: "După lansare, pot modifica singur conținutul?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Da, pachetele Standard/Pro includ CMS. Oferim și ghid + training (în Pro).",
          },
        },
      ],
    },
  ],
};

const packages = [
  {
    id: "pachet-basic",
    name: "Basic",
    price: "50€",
    description: "Landing page (1 pagină) – soluția rapidă și ieftină",
    features: [
      "Design responsiv mobil/tabletă",
      "Formular de contact, hartă Google",
      "SSL, optimizare viteză de bază",
      "SEO on-page de bază (Titlu, Meta, H1-H3)",
      "1 revizuire inclusă",
      "Livrare: 2–3 zile lucrătoare",
    ],
    note: "Domeniu & găzduire nu sunt incluse. Te putem ajuta cu setarea.",
    featured: false,
  },
  {
    id: "pachet-standard",
    name: "Standard",
    price: "150€",
    description: "Site de prezentare (până la 5 pagini) + setup esențial",
    features: [
      "Design modern & UX orientat pe conversie",
      "CMS ușor (administrare conținut)",
      "SEO on-page extins + schema JSON-LD",
      "Configurare GA4 & Search Console",
      "2–3 revizuiri incluse",
      "Livrare: 7–10 zile lucrătoare",
    ],
    note: "Ideal pentru afaceri locale care vor vizibilitate în căutări.",
    featured: true,
  },
  {
    id: "pachet-pro",
    name: "Pro",
    price: "300€",
    description: "Site avansat (până la 12 pagini) sau mini-magazin",
    features: [
      "Design personalizat + componente premium",
      "Mini-magazin (până la 10 produse), coș, livrare & plăți",
      "SEO avansat (structură, viteză, rich results)",
      "RO + RU (multi-language) – opțional",
      "5 revizuiri incluse + training 1 oră",
      "Livrare: 10–14 zile lucrătoare",
    ],
    note: "Include 1 lună mentenanță de bază post-lansare.",
    featured: false,
  },
];

const factors = [
  {
    title: "Numărul de pagini",
    description:
      "Un site de prezentare cu 3-5 pagini este mai simplu decât unul cu 10-15 pagini, ceea ce influențează timpul de lucru și bugetul.",
  },
  {
    title: "Design & identitate",
    description:
      "Template adaptat sau design personalizat? Cu cât crește nivelul de personalizare, cu atât crește și prețul.",
  },
  {
    title: "Funcționalități speciale",
    description:
      "Formulare avansate, rezervări, integrare plăți sau mini-magazin adaugă dezvoltare suplimentară.",
  },
  {
    title: "SEO & conținut",
    description:
      "Optimizarea SEO, textele copywriting și imaginile pot influența costul și rezultatele în Google.",
  },
];

const addons = [
  {
    title: "Logo & identitate vizuală",
    description: "De la 30€ – variantă principală + kit pentru web.",
  },
  {
    title: "Copywriting SEO",
    description: "De la 10€/pagină – texte optimizate pentru RO/RU.",
  },
  {
    title: "Multi-language RO/RU",
    description: "De la 30€ – pagini traduse + switcher.",
  },
  {
    title: "Mentenanță",
    description: "De la 25€/lună – actualizări, securitate, backup.",
  },
];

const faqs = [
  {
    question: "De ce prețurile sunt atât de accesibile?",
    answer:
      "Prețuri mici nu înseamnă calitate scăzută. Folosim tehnologii moderne (Astro, componente pre-optimizate, hosting Cloudflare) care reduc drastic timpul de dezvoltare – nu calitatea. Fiecare site primește aceeași atenție la detalii: design modern, cod curat și SEO on-page.",
  },
  {
    question: "Pot plăti în MDL sau în două tranșe?",
    answer:
      "Da. Facturarea se poate face în EUR sau echivalent MDL. Pentru pachetele Standard/Pro acceptăm și plata în două tranșe (50% avans, 50% la livrare).",
  },
  {
    question: "Ce include SEO on-page?",
    answer:
      "Meta-taguri, structură corectă pe pagină (H1–H3), optimizare viteză, schema JSON-LD (acolo unde e relevant) și configurări de bază pentru indexare.",
  },
  {
    question: "Domeniul și găzduirea sunt incluse?",
    answer:
      "Nu. Îți recomandăm opțiuni potrivite bugetului și te ajutăm la configurare (DNS, SSL, e-mailuri).",
  },
  {
    question: "După lansare, pot modifica singur conținutul?",
    answer:
      "Da, pachetele Standard/Pro includ CMS (administrare conținut). Oferim și un mic ghid + training (în Pro).",
  },
];
---

<!doctype html>
<html lang="ro">
  <head>
    <BaseHead
      title="Preț creare site web 2026 | De la 50 EUR - moldovawebsite.md"
      description="Rapid și profesional: preț mic pentru site de prezentare sau magazin online. Pachete de la 50 EUR. Consultație gratuită și ofertă personalizată."
      canonicalUrl="https://moldovawebsite.md/preturi/"
      hreflangRo="https://moldovawebsite.md/preturi/"
      hreflangRu="https://moldovawebsite.md/ru/preturi/"
      image="/assets/og-image-preturi.webp"
      jsonLd={jsonLd}
    />
    <style>
      /* Dark Dev Theme - Prices Page */
      :root {
        --dev-bg: #0a0a0f;
        --dev-surface: #12121a;
        --dev-surface-2: #1a1a25;
        --dev-border: #2a2a3a;
        --dev-text: #e4e4e7;
        --dev-text-muted: #71717a;
        --dev-accent: #22d3ee;
        --dev-accent-2: #a855f7;
        --dev-accent-3: #f472b6;
        --dev-success: #34d399;
        --dev-gradient: linear-gradient(
          135deg,
          #22d3ee 0%,
          #a855f7 50%,
          #f472b6 100%
        );
      }

      .dev-section {
        padding: 5rem 0;
        background: var(--dev-bg);
        position: relative;
      }

      .dev-section-alt {
        background: var(--dev-surface);
      }

      .dev-section-header {
        text-align: center;
        max-width: 800px;
        margin: 0 auto 3rem;
      }

      .dev-section-tag {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(34, 211, 238, 0.1);
        border: 1px solid rgba(34, 211, 238, 0.2);
        border-radius: 9999px;
        font-size: 0.875rem;
        color: var(--dev-accent);
        margin-bottom: 1rem;
        font-family: "JetBrains Mono", monospace;
      }

      .dev-section h2 {
        font-size: clamp(1.75rem, 4vw, 2.5rem);
        font-weight: 800;
        color: #fff;
        margin-bottom: 1rem;
      }

      .dev-section p {
        color: var(--dev-text-muted);
        font-size: 1.1rem;
      }

      /* Hero */
      .dev-hero {
        min-height: 50vh;
        display: flex;
        align-items: center;
        background: var(--dev-bg);
        padding-top: 120px;
        position: relative;
        overflow: hidden;
      }

      .dev-hero::before {
        content: "";
        position: absolute;
        inset: 0;
        background:
          radial-gradient(
            ellipse 80% 50% at 50% -20%,
            rgba(34, 211, 238, 0.1),
            transparent
          ),
          radial-gradient(
            ellipse 60% 40% at 80% 60%,
            rgba(168, 85, 247, 0.08),
            transparent
          );
        pointer-events: none;
      }

      .dev-hero-content {
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
      }

      .dev-hero h1 {
        font-size: clamp(2rem, 5vw, 3rem);
        font-weight: 800;
        line-height: 1.1;
        color: #fff;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #fff 0%, #a5f3fc 50%, #c084fc 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .dev-hero p {
        color: var(--dev-text-muted);
        font-size: 1.125rem;
        margin-bottom: 0.5rem;
      }

      /* Breadcrumbs */
      .dev-breadcrumbs {
        padding: 1rem 0;
        background: var(--dev-surface);
        border-bottom: 1px solid var(--dev-border);
      }

      .dev-breadcrumbs ol {
        list-style: none;
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        margin: 0;
        padding: 0;
      }

      .dev-breadcrumbs a {
        color: var(--dev-accent);
        text-decoration: none;
      }

      .dev-breadcrumbs [aria-current] {
        color: var(--dev-text-muted);
      }

      /* Pricing Grid */
      .dev-pricing-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 1.5rem;
        max-width: 1200px;
        margin: 0 auto;
      }

      .dev-price-card {
        background: var(--dev-surface-2);
        border: 1px solid var(--dev-border);
        border-radius: 16px;
        padding: 2rem;
        position: relative;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
      }

      .dev-price-card.featured {
        border-color: var(--dev-accent);
        box-shadow: 0 0 30px rgba(34, 211, 238, 0.1);
      }

      .dev-price-card.featured::before {
        content: "Recomandat";
        position: absolute;
        top: -1px;
        left: 50%;
        transform: translateX(-50%);
        padding: 0.375rem 1rem;
        background: var(--dev-accent);
        color: #000;
        font-size: 0.75rem;
        font-weight: 700;
        border-radius: 0 0 8px 8px;
        font-family: "JetBrains Mono", monospace;
      }

      .dev-price-card:hover {
        transform: translateY(-4px);
        border-color: var(--dev-accent);
      }

      .dev-price-card h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 0.5rem;
      }

      .dev-price {
        font-size: 3rem;
        font-weight: 800;
        background: var(--dev-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-family: "JetBrains Mono", monospace;
        margin-bottom: 0.5rem;
      }

      .dev-price-card > p {
        color: var(--dev-text-muted);
        font-size: 0.95rem;
        margin-bottom: 1.5rem;
      }

      .dev-price-features {
        list-style: none;
        margin: 0 0 1.5rem 0;
        padding: 0;
        flex-grow: 1;
      }

      .dev-price-features li {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        padding: 0.625rem 0;
        color: var(--dev-text);
        font-size: 0.9rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
      }

      .dev-price-features li::before {
        content: "✓";
        color: var(--dev-success);
        font-weight: 700;
      }

      .dev-price-note {
        font-size: 0.8rem;
        color: var(--dev-text-muted);
        margin-bottom: 1.5rem;
      }

      .dev-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 1rem 2rem;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 12px;
        transition: all 0.3s ease;
        text-decoration: none;
        border: none;
        cursor: pointer;
        width: 100%;
      }

      .dev-btn-primary {
        background: var(--dev-gradient);
        color: #fff;
        box-shadow: 0 4px 20px rgba(34, 211, 238, 0.3);
      }

      .dev-btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(34, 211, 238, 0.4);
      }

      /* Info Grid */
      .dev-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
      }

      .dev-info-card {
        background: var(--dev-surface-2);
        border: 1px solid var(--dev-border);
        border-radius: 16px;
        padding: 1.75rem;
        transition: all 0.3s ease;
      }

      .dev-info-card:hover {
        border-color: var(--dev-accent-2);
      }

      .dev-info-card h3 {
        font-size: 1.1rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 0.75rem;
      }

      .dev-info-card p {
        color: var(--dev-text-muted);
        font-size: 0.9rem;
        line-height: 1.6;
        margin: 0;
      }

      /* FAQ */
      .dev-faq-list {
        max-width: 800px;
        margin: 0 auto;
      }

      .dev-faq-item {
        background: var(--dev-surface-2);
        border: 1px solid var(--dev-border);
        border-radius: 12px;
        margin-bottom: 1rem;
        overflow: hidden;
        transition: all 0.3s ease;
      }

      .dev-faq-item[open] {
        border-color: var(--dev-accent);
      }

      .dev-faq-item summary {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1.25rem 1.5rem;
        cursor: pointer;
        font-weight: 600;
        color: #fff;
        list-style: none;
        transition: color 0.3s ease;
      }

      .dev-faq-item summary::-webkit-details-marker {
        display: none;
      }

      .dev-faq-item summary::after {
        content: "+";
        font-size: 1.5rem;
        color: var(--dev-accent);
        font-family: "JetBrains Mono", monospace;
        transition: transform 0.3s ease;
      }

      .dev-faq-item[open] summary::after {
        transform: rotate(45deg);
      }

      .dev-faq-item summary:hover {
        color: var(--dev-accent);
      }

      .dev-faq-item p {
        padding: 0 1.5rem 1.5rem;
        color: var(--dev-text-muted);
        line-height: 1.7;
        margin: 0;
      }

      /* CTA Section */
      .dev-cta {
        padding: 5rem 0;
        background: var(--dev-surface);
        position: relative;
        overflow: hidden;
      }

      .dev-cta::before {
        content: "";
        position: absolute;
        inset: 0;
        background:
          radial-gradient(
            ellipse 60% 40% at 50% 100%,
            rgba(34, 211, 238, 0.1),
            transparent
          ),
          radial-gradient(
            ellipse 40% 30% at 20% 50%,
            rgba(168, 85, 247, 0.08),
            transparent
          );
        pointer-events: none;
      }

      .dev-cta-content {
        text-align: center;
        max-width: 700px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
      }

      .dev-cta h2 {
        font-size: clamp(1.75rem, 4vw, 2.5rem);
        font-weight: 800;
        color: #fff;
        margin-bottom: 1rem;
      }

      .dev-cta p {
        color: var(--dev-text-muted);
        font-size: 1.125rem;
        margin-bottom: 2rem;
      }

      /* Grid Pattern */
      .dev-grid-pattern {
        position: fixed;
        inset: 0;
        background-image:
          linear-gradient(rgba(34, 211, 238, 0.03) 1px, transparent 1px),
          linear-gradient(90deg, rgba(34, 211, 238, 0.03) 1px, transparent 1px);
        background-size: 50px 50px;
        pointer-events: none;
        z-index: -1;
      }
    </style>
  </head>
  <body style="background: #0a0a0f; color: #e4e4e7;">
    <div class="dev-grid-pattern"></div>
    <Header lang="ro" />

    <!-- Hero -->
    <section class="dev-hero">
      <div class="container">
        <div class="dev-hero-content">
          <span class="dev-section-tag">Prețuri</span>
          <h1>Prețuri & Pachete – Creare site web în Moldova</h1>
          <p>
            Alege pachetul potrivit din pachetele noastre: Basic 50€, Standard
            150€, Pro 300€.
          </p>
          <p>Web design accesibil în Chișinău și toată Moldova.</p>
        </div>
      </div>
    </section>

    <!-- Breadcrumbs -->
    <nav class="dev-breadcrumbs" aria-label="breadcrumb">
      <div class="container">
        <ol>
          <li><a href="/">Acasă</a></li>
          <li aria-hidden="true">/</li>
          <li><span aria-current="page">Prețuri</span></li>
        </ol>
      </div>
    </nav>

    <!-- Pricing Section -->
    <section class="dev-section dev-section-alt" id="preturi">
      <div class="container">
        <div class="dev-section-header">
          <span class="dev-section-tag">Pachete</span>
          <h2>Alege varianta potrivită</h2>
          <p>Pentru afaceri mici sau proiecte personale</p>
        </div>
        <div class="dev-pricing-grid">
          {
            packages.map((pkg) => (
              <article
                class={`dev-price-card ${pkg.featured ? "featured" : ""}`}
                id={pkg.id}
              >
                <h3>{pkg.name}</h3>
                <div class="dev-price">{pkg.price}</div>
                <p>{pkg.description}</p>
                <ul class="dev-price-features">
                  {pkg.features.map((f) => (
                    <li>{f}</li>
                  ))}
                </ul>
                <p class="dev-price-note">* {pkg.note}</p>
                <a href="/contact/" class="dev-btn dev-btn-primary">
                  Solicită ofertă
                </a>
              </article>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Factors Section -->
    <section class="dev-section" id="preturi-explicate">
      <div class="container">
        <div class="dev-section-header">
          <span class="dev-section-tag">Informații</span>
          <h2>Ce influențează prețul?</h2>
          <p>Factorii principali care intră în calculul costului final</p>
        </div>
        <div class="dev-info-grid">
          {
            factors.map((f) => (
              <div class="dev-info-card">
                <h3>{f.title}</h3>
                <p>{f.description}</p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Addons Section -->
    <section class="dev-section dev-section-alt" id="adaugiri">
      <div class="container">
        <div class="dev-section-header">
          <span class="dev-section-tag">Extra</span>
          <h2>Adăugiri opționale</h2>
          <p>Extinde pachetul ales, când ai nevoie</p>
        </div>
        <div class="dev-info-grid">
          {
            addons.map((a) => (
              <div class="dev-info-card">
                <h3>{a.title}</h3>
                <p>{a.description}</p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="dev-section" id="faq">
      <div class="container">
        <div class="dev-section-header">
          <span class="dev-section-tag">FAQ</span>
          <h2>Întrebări frecvente</h2>
          <p>Detalii practice despre pachetele de preț</p>
        </div>
        <div class="dev-faq-list">
          {
            faqs.map((faq) => (
              <details class="dev-faq-item">
                <summary>{faq.question}</summary>
                <p>{faq.answer}</p>
              </details>
            ))
          }
