      jsonLd={jsonLd}
    />
    <style>
      /* Dark Dev Theme - About Page */
      :root {
        --dev-bg: #0a0a0f;
        --dev-surface: #12121a;
        --dev-surface-2: #1a1a25;
        --dev-border: #2a2a3a;
        --dev-text: #e4e4e7;
        --dev-text-muted: #71717a;
        --dev-accent: #22d3ee;
        --dev-accent-2: #a855f7;
        --dev-accent-3: #f472b6;
        --dev-success: #34d399;
        --dev-gradient: linear-gradient(
          135deg,
          #22d3ee 0%,
          #a855f7 50%,
          #f472b6 100%
        );
      }

      .dev-section {
        padding: 6rem 0;
        background: var(--dev-bg);
        position: relative;
      }

      .dev-section-alt {
        background: var(--dev-surface);
      }

      .dev-section-header {
        text-align: center;
        max-width: 800px;
        margin: 0 auto 4rem;
      }

      .dev-section-tag {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(34, 211, 238, 0.1);
        border: 1px solid rgba(34, 211, 238, 0.2);
        border-radius: 9999px;
        font-size: 0.875rem;
        color: var(--dev-accent);
        margin-bottom: 1rem;
        font-family: "JetBrains Mono", monospace;
      }

      .dev-section h2 {
        font-size: clamp(2rem, 4vw, 3rem);
        font-weight: 800;
        color: #fff;
        margin-bottom: 1rem;
      }

      .dev-section p {
        color: var(--dev-text-muted);
        font-size: 1.125rem;
      }

      /* Hero Section */
      .dev-hero {
        min-height: 70vh;
        display: flex;
        align-items: center;
        background: var(--dev-bg);
        padding-top: 120px;
        position: relative;
        overflow: hidden;
      }

      .dev-hero::before {
        content: "";
        position: absolute;
        inset: 0;
        background:
          radial-gradient(
            ellipse 80% 50% at 50% -20%,
            rgba(34, 211, 238, 0.1),
            transparent
          ),
          radial-gradient(
            ellipse 60% 40% at 80% 60%,
            rgba(168, 85, 247, 0.08),
            transparent
          );
        pointer-events: none;
      }

      .dev-hero-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
        position: relative;
        z-index: 1;
      }

      @media (max-width: 1024px) {
        .dev-hero-grid {
          grid-template-columns: 1fr;
          text-align: center;
        }
      }

      .dev-hero-content h1 {
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        font-weight: 800;
        line-height: 1.1;
        color: #fff;
        margin-bottom: 1.5rem;
        background: linear-gradient(135deg, #fff 0%, #a5f3fc 50%, #c084fc 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .dev-hero-content p {
        color: var(--dev-text-muted);
        font-size: 1.125rem;
        margin-bottom: 1rem;
        line-height: 1.7;
      }

      .dev-hero-content strong {
        color: var(--dev-text);
      }

      .dev-hero-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        flex-wrap: wrap;
      }

      @media (max-width: 1024px) {
        .dev-hero-actions {
          justify-content: center;
        }
      }

      .dev-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem 2rem;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 12px;
        transition: all 0.3s ease;
        text-decoration: none;
        border: none;
        cursor: pointer;
      }

      .dev-btn-primary {
        background: var(--dev-gradient);
        color: #fff;
        box-shadow: 0 4px 20px rgba(34, 211, 238, 0.3);
      }

      .dev-btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(34, 211, 238, 0.4);
      }

      .dev-btn-secondary {
        background: transparent;
        color: var(--dev-text);
        border: 1px solid var(--dev-border);
      }

      .dev-btn-secondary:hover {
        background: var(--dev-surface-2);
        border-color: var(--dev-accent);
      }

      .dev-hero-visual {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      @media (max-width: 1024px) {
        .dev-hero-visual {
          display: none;
        }
      }

      .dev-code-window {
        width: 100%;
        max-width: 450px;
        background: var(--dev-surface);
        border: 1px solid var(--dev-border);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
      }

      .dev-code-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem 1.25rem;
        background: var(--dev-surface-2);
        border-bottom: 1px solid var(--dev-border);
      }

      .dev-code-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
      }

      .dev-code-dot.red {
        background: #ff5f56;
      }
      .dev-code-dot.yellow {
        background: #ffbd2e;
      }
      .dev-code-dot.green {
        background: #27ca40;
      }

      .dev-code-body {
        padding: 1.5rem;
        font-family: "JetBrains Mono", monospace;
        font-size: 0.85rem;
        line-height: 1.8;
      }

      .dev-code-line {
        display: flex;
        gap: 0.5rem;
      }
      .dev-code-num {
        color: var(--dev-text-muted);
        min-width: 1.5rem;
      }
      .dev-code-keyword {
        color: #c084fc;
      }
      .dev-code-string {
        color: #34d399;
      }
      .dev-code-comment {
        color: #71717a;
      }
      .dev-code-func {
        color: #22d3ee;
      }

      /* Values Grid */
      .dev-values-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
      }

      .dev-value-card {
        background: var(--dev-surface-2);
        border: 1px solid var(--dev-border);
        border-radius: 16px;
        padding: 2rem;
        transition: all 0.3s ease;
      }

      .dev-value-card:hover {
        transform: translateY(-4px);
        border-color: var(--dev-accent);
      }

      .dev-value-num {
        font-size: 2.5rem;
        font-weight: 800;
        background: var(--dev-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-family: "JetBrains Mono", monospace;
        margin-bottom: 1rem;
      }

      .dev-value-card h3 {
        font-size: 1.25rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 0.75rem;
      }

      .dev-value-card p {
        color: var(--dev-text-muted);
        font-size: 0.95rem;
        line-height: 1.6;
      }

      /* Process */
      .dev-process-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        position: relative;
      }

      .dev-process-grid::before {
        content: "";
        position: absolute;
        top: 2rem;
        left: 0;
        right: 0;
        height: 2px;
        background: linear-gradient(
          90deg,
          var(--dev-accent),
          var(--dev-accent-2),
          var(--dev-accent-3)
        );
        opacity: 0.3;
        z-index: 0;
      }

      @media (max-width: 768px) {
        .dev-process-grid::before {
          display: none;
        }
      }

      .dev-process-step {
        text-align: center;
        position: relative;
        z-index: 1;
      }

      .dev-process-num {
        width: 64px;
        height: 64px;
        background: var(--dev-surface-2);
        border: 2px solid var(--dev-border);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        font-weight: 800;
        color: var(--dev-accent);
        margin: 0 auto 1.5rem;
        font-family: "JetBrains Mono", monospace;
      }

      .dev-process-step h3 {
        font-size: 1.25rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 0.75rem;
      }

      .dev-process-step p {
        color: var(--dev-text-muted);
        font-size: 0.95rem;
        line-height: 1.6;
      }

      /* Testimonials */
      .dev-testimonials-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
      }

      .dev-testimonial {
        background: var(--dev-surface-2);
        border: 1px solid var(--dev-border);
        border-radius: 12px;
        padding: 1.5rem;
        position: relative;
      }

      .dev-testimonial::before {
        content: '"';
        position: absolute;
        top: 1rem;
        right: 1.5rem;
        font-size: 4rem;
        color: var(--dev-accent);
        opacity: 0.2;
        font-family: serif;
        line-height: 1;
      }

      .dev-testimonial-content {
        color: var(--dev-text);
        font-size: 0.95rem;
        line-height: 1.7;
        margin-bottom: 1.5rem;
      }

      .dev-testimonial-author {
        display: flex;
        align-items: center;
        gap: 0.75rem;
      }

      .dev-testimonial-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--dev-gradient);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        color: #fff;
        font-size: 0.875rem;
      }

      .dev-testimonial-info strong {
        display: block;
        color: #fff;
        font-size: 0.9rem;
      }

      .dev-testimonial-info span {
        color: var(--dev-text-muted);
        font-size: 0.8rem;
      }

      /* Stats */
      .dev-stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        margin-top: 3rem;
      }

      .dev-stat {
        text-align: center;
        padding: 2rem;
        background: var(--dev-surface-2);
        border: 1px solid var(--dev-border);
        border-radius: 16px;
      }

      .dev-stat-value {
        font-size: 2.5rem;
        font-weight: 800;
        background: var(--dev-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 0.5rem;
      }

      .dev-stat-label {
        color: var(--dev-text-muted);
        font-size: 0.9rem;
      }

      /* Benefits */
      .dev-benefits-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
      }

      .dev-benefit-card {
        background: var(--dev-surface-2);
        border: 1px solid var(--dev-border);
        border-radius: 16px;
        padding: 2rem;
        border-left: 4px solid var(--dev-accent);
        transition: all 0.3s ease;
      }

      .dev-benefit-card:hover {
        transform: translateX(8px);
        border-color: var(--dev-accent);
      }

      .dev-benefit-card h3 {
        font-size: 1.25rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 1rem;
      }

      .dev-benefit-card p {
        color: var(--dev-text-muted);
        font-size: 0.95rem;
        line-height: 1.7;
      }

      /* Why Choose Us */
      .dev-why-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
      }

      .dev-why-card {
        background: var(--dev-surface-2);
        border: 1px solid var(--dev-border);
        border-radius: 16px;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s ease;
      }

      .dev-why-card:hover {
        border-color: var(--dev-accent-2);
        transform: translateY(-4px);
      }

      .dev-why-card h3 {
        font-size: 1.25rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 1rem;
        margin-top: 1rem;
      }

      .dev-why-card p {
        color: var(--dev-text-muted);
        font-size: 0.95rem;
        line-height: 1.7;
      }

      .dev-why-icon {
        font-size: 3rem;
        margin-bottom: 0.5rem;
      }

      /* FAQ */
      .dev-faq-list {
        max-width: 800px;
        margin: 0 auto;
      }

      .dev-faq-item {
        background: var(--dev-surface-2);
        border: 1px solid var(--dev-border);
        border-radius: 12px;
        margin-bottom: 1rem;
        overflow: hidden;
        transition: all 0.3s ease;
      }

      .dev-faq-item[open] {
        border-color: var(--dev-accent);
      }

      .dev-faq-item summary {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1.25rem 1.5rem;
        cursor: pointer;
        font-weight: 600;
        color: #fff;
        list-style: none;
        transition: color 0.3s ease;
      }

      .dev-faq-item summary::-webkit-details-marker {
        display: none;
      }

      .dev-faq-item summary::after {
        content: "+";
        font-size: 1.5rem;
        color: var(--dev-accent);
        font-family: "JetBrains Mono", monospace;
        transition: transform 0.3s ease;
      }

      .dev-faq-item[open] summary::after {
        transform: rotate(45deg);
      }

      .dev-faq-item summary:hover {
        color: var(--dev-accent);
      }

      .dev-faq-item p {
        padding: 0 1.5rem 1.5rem;
        color: var(--dev-text-muted);
        line-height: 1.7;
        margin: 0;
      }

      /* CTA Section */
      .dev-cta {
        padding: 6rem 0;
        background: var(--dev-surface);
        position: relative;
        overflow: hidden;
      }

      .dev-cta::before {
        content: "";
        position: absolute;
        inset: 0;
        background:
          radial-gradient(
            ellipse 60% 40% at 50% 100%,
            rgba(34, 211, 238, 0.1),
            transparent
          ),
          radial-gradient(
            ellipse 40% 30% at 20% 50%,
            rgba(168, 85, 247, 0.08),
            transparent
          );
        pointer-events: none;
      }

      .dev-cta-content {
        text-align: center;
        max-width: 700px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
      }

      .dev-cta h2 {
        font-size: clamp(2rem, 4vw, 3rem);
        font-weight: 800;
        color: #fff;
        margin-bottom: 1rem;
      }

      .dev-cta p {
        color: var(--dev-text-muted);
        font-size: 1.125rem;
        margin-bottom: 2rem;
      }

      /* Grid Pattern */
      .dev-grid-pattern {
        position: fixed;
        inset: 0;
        background-image:
          linear-gradient(rgba(34, 211, 238, 0.03) 1px, transparent 1px),
          linear-gradient(90deg, rgba(34, 211, 238, 0.03) 1px, transparent 1px);
        background-size: 50px 50px;
        pointer-events: none;
        z-index: -1;
      }

      /* Content Text */
      .dev-content-text {
        max-width: 900px;
        margin: 0 auto;
        text-align: center;
      }

      .dev-content-text p {
        color: var(--dev-text-muted);
        font-size: 1.1rem;
        line-height: 1.8;
        margin-bottom: 1.5rem;
      }

      .dev-content-text strong {
        color: var(--dev-text);
      }
    </style>
