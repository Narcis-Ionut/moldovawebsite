      display: grid;
      gap: 1.5rem;
      grid-template-columns: minmax(0, 1.4fr) minmax(0, 0.8fr);
      align-items: center;
    }

    .post-costa .cta-note {
      background: color-mix(in oklch, var(--bg) 85%, white);
      font-size: 0.95rem;
    }

    .post-costa .cta-action a {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0.75rem 1.4rem;
      border-radius: 999px;
      background: var(--brand-1);
      color: var(--bg);
      border: 1px solid var(--brand-1);
      box-shadow: 0 12px 20px color-mix(in oklch, var(--brand-1) 25%, transparent);
    }

    .post-costa .cta-action a:hover {
      color: var(--bg);
      border-bottom-color: transparent;
      background: color-mix(in oklch, var(--brand-1) 90%, black);
    }

    @media (max-width: 960px) {
      .post-costa .costa-hero,
      .post-costa .pricing-grid,
      .post-costa .why-grid,
      .post-costa .budget-layout,
      .post-costa .cta-grid {
        grid-template-columns: 1fr;
      }

      .post-costa .table-card table {
        min-width: 480px;
      }
    }

    @media (max-width: 640px) {
      .post-costa .content-block {
        padding: 1.5rem;
        border-radius: 22px;
      }

      .post-costa .text-card {
        padding: 1.25rem 1.4rem;
      }

      .post-costa .table-card table {
        min-width: 420px;
      }
    }
  </style>
</BlogPost>
