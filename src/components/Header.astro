---
interface Props {
  lang?: "ro" | "ru";
  currentPath?: string;
}

const { lang = "ro", currentPath = "/" } = Astro.props;

const navLinks =
  lang === "ro"
    ? [
        { href: "/", label: "Acasă" },
        { href: "/#servicii", label: "Servicii" },
        { href: "/serviciiBlog/dezvoltare-web/", label: "Detalii" },
        { href: "/about/", label: "Despre" },
        { href: "/blog/", label: "Blog" },
        { href: "/preturi/", label: "Prețuri" },
        { href: "/contact/", label: "Contact" },
      ]
    : [
        { href: "/ru", label: "Главная" },
        { href: "/ru#servicii", label: "Услуги" },
        { href: "/ru/serviciiBlog/dezvoltare-web/", label: "Детали" },
        { href: "/ru/about/", label: "О нас" },
        { href: "/ru/blog/", label: "Блог" },
        { href: "/ru/preturi/", label: "Цены" },
        { href: "/ru/contact/", label: "Контакты" },
      ];

const homeLink = lang === "ro" ? "/" : "/ru";
const ariaLabel =
  lang === "ro" ? "moldovawebsite.md - Acasă" : "moldovawebsite.md - Главная";
const navAriaLabel =
  lang === "ro" ? "Navigare principală" : "Основная навигация";
const langToggleAriaLabel = lang === "ro" ? "Selectare limbă" : "Выбор языка";
const hamburgerAriaLabel = lang === "ro" ? "Deschide meniul" : "Открыть меню";
---

<header class="nf-header" id="header">
  <div class="container nf-nav">
    <a href={homeLink} class="nf-logo" aria-label={ariaLabel}>
      <div class="nf-logo-icon" aria-hidden="true">
        <svg viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect width="32" height="32" rx="8" fill="#e50914"></rect>
          <path
            d="M8 12L12 20L16 12L20 20L24 12"
            stroke="white"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </div>
      <span class="nf-logo-text">moldovawebsite.md</span>
    </a>

    <ul
      class="nf-nav-links"
      id="nav-menu"
      role="navigation"
      aria-label={navAriaLabel}
    >
      {
        navLinks.map((link) => (
          <li>
            <a href={link.href} class="nf-nav-link">
              {link.label}
            </a>
          </li>
        ))
      }
    </ul>

    <div style="display: flex; align-items: center; gap: 1rem;">
      <div class="nf-lang-toggle" aria-label={langToggleAriaLabel}>
        <a
          href={lang === "ro" ? "/ru" : "/"}
          class="nf-btn nf-btn-ghost nf-btn-sm"
          style="text-transform: uppercase; font-weight: 700;"
          aria-label={lang === "ro"
            ? "Переключиться на русский"
            : "Switch to Romanian"}
        >
          {lang === "ro" ? "RU" : "RO"}
        </a>
      </div>

      <a href={lang === "ro" ? "/contact/" : "/ru/contact/"} class="nf-btn nf-btn-primary nf-btn-sm nf-header-cta">
        {lang === "ro" ? "Contact" : "Контакт"}
      </a>

      <button
        type="button"
        class="nf-hamburger"
        aria-label={hamburgerAriaLabel}
        aria-expanded="false"
        aria-controls="nav-menu"
      >
        <span></span><span></span><span></span>
      </button>
    </div>
  </div>
</header>

<style>
  .nf-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 1rem 0;
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.97);
    backdrop-filter: blur(16px);
    box-shadow: 0 1px 0 rgba(0, 0, 0, 0.06);
  }

  .nf-header.scrolled {
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(20px);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.08);
  }

  .nf-header.scrolled .nf-logo-text {
    color: #141414;
  }

  .nf-header.scrolled .nf-nav-link {
    color: #444;
  }

  .nf-header.scrolled .nf-nav-link:hover {
    color: #e50914;
  }

  .nf-header.scrolled .nf-hamburger span {
    background: #141414;
  }

  .nf-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nf-logo {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    font-weight: 900;
    font-size: 1.25rem;
    color: #e50914;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .nf-logo:hover {
    transform: scale(1.02);
  }

  .nf-logo-icon {
    width: 36px;
    height: 36px;
    border-radius: 8px;
    overflow: hidden;
    flex-shrink: 0;
  }

  .nf-logo-icon svg {
    width: 100%;
    height: 100%;
  }

  .nf-logo-text {
    color: #141414;
    display: none;
    font-weight: 800;
  }

  @media (min-width: 480px) {
    .nf-logo-text {
      display: block;
    }
  }

  .nf-nav-links {
    display: none;
    list-style: none;
    gap: 0.5rem;
    margin: 0;
    padding: 0;
  }

  @media (min-width: 1024px) {
    .nf-nav-links {
      display: flex;
    }
  }

  .nf-nav-link {
    display: block;
    padding: 0.5rem 1rem;
    font-weight: 500;
    font-size: 0.875rem;
    color: #444;
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .nf-nav-link:hover {
    color: #e50914;
    background: rgba(229, 9, 20, 0.1);
  }

  .nf-lang-toggle {
    display: flex;
  }

  .nf-header-cta {
    display: none;
  }

  @media (min-width: 768px) {
    .nf-header-cta {
      display: inline-flex;
    }
  }

  .nf-hamburger {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 40px;
    height: 40px;
    padding: 0;
    background: transparent;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  @media (min-width: 1024px) {
    .nf-hamburger {
      display: none;
    }
  }

  .nf-hamburger span {
    display: block;
    width: 24px;
    height: 2px;
    background: #141414;
    margin: 0 auto;
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  .nf-hamburger[aria-expanded="true"] span:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }

  .nf-hamburger[aria-expanded="true"] span:nth-child(2) {
    opacity: 0;
  }

  .nf-hamburger[aria-expanded="true"] span:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* Mobile menu styles */
  @media (max-width: 1023px) {
    .nf-nav-links {
      position: fixed;
      top: 70px;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(20px);
      flex-direction: column;
      padding: 2rem;
      gap: 0.5rem;
      transform: translateX(100%);
      transition: transform 0.3s ease;
      z-index: 999;
    }

    .nf-nav-links.active {
      display: flex;
      transform: translateX(0);
    }

    .nf-nav-link {
      padding: 1rem;
      font-size: 1.25rem;
      color: #141414;
      border-bottom: 1px solid rgba(0, 0, 0, 0.05);
      border-radius: 0;
    }

    .nf-nav-link:hover {
      background: rgba(229, 9, 20, 0.05);
    }
  }
</style>

<script>
  // Header scroll effect
  const header = document.getElementById("header");
  window.addEventListener("scroll", () => {
    if (window.scrollY > 50) {
      header?.classList.add("scrolled");
    } else {
      header?.classList.remove("scrolled");
    }
  });

  // Mobile menu toggle
  const hamburger = document.querySelector(".nf-hamburger");
  const navMenu = document.getElementById("nav-menu");

  hamburger?.addEventListener("click", () => {
    const isExpanded = hamburger.getAttribute("aria-expanded") === "true";
    hamburger.setAttribute("aria-expanded", String(!isExpanded));
    navMenu?.classList.toggle("active");
  });

  // Close menu on link click
  document.querySelectorAll(".nf-nav-link").forEach((link) => {
    link.addEventListener("click", () => {
      hamburger?.setAttribute("aria-expanded", "false");
      navMenu?.classList.remove("active");
    });
  });
</script>
