---
interface Props {
  lang?: "ro" | "ru";
  currentPath?: string;
}

const { lang = "ro", currentPath = "/" } = Astro.props;

const navLinks =
  lang === "ro"
    ? [
        { href: "/", label: "Acasă" },
        { href: "/#servicii", label: "Servicii" },
        { href: "/serviciiBlog/dezvoltare-web/", label: "Detalii" },
        { href: "/about/", label: "Despre" },
        { href: "/blog/", label: "Blog" },
        { href: "/preturi/", label: "Prețuri" },
        { href: "/contact/", label: "Contact" },
      ]
    : [
        { href: "/ru", label: "Главная" },
        { href: "/ru#servicii", label: "Услуги" },
        { href: "/ru/serviciiBlog/dezvoltare-web/", label: "Детали" },
        { href: "/ru/about/", label: "О нас" },
        { href: "/ru/blog/", label: "Блог" },
        { href: "/ru/preturi/", label: "Цены" },
        { href: "/ru/contact/", label: "Контакты" },
      ];

const homeLink = lang === "ro" ? "/" : "/ru";
const ariaLabel =
  lang === "ro" ? "moldovawebsite.md - Acasă" : "moldovawebsite.md - Главная";
const navAriaLabel =
  lang === "ro" ? "Navigare principală" : "Основная навигация";
const langToggleAriaLabel = lang === "ro" ? "Selectare limbă" : "Выбор языка";
const hamburgerAriaLabel = lang === "ro" ? "Deschide meniul" : "Открыть меню";
---

<header class="nf-header" id="header">
  <div class="container nf-nav">
    <a href={homeLink} class="nf-logo" aria-label={ariaLabel}>
      <div class="nf-logo-icon" aria-hidden="true">
        <svg viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect width="32" height="32" rx="8" fill="#e50914"></rect>
          <path
            d="M8 12L12 20L16 12L20 20L24 12"
            stroke="white"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </div>
      <span class="nf-logo-text">moldovawebsite.md</span>
    </a>

    <ul
      class="nf-nav-links"
      id="nav-menu"
      role="navigation"
      aria-label={navAriaLabel}
    >
      {
        navLinks.map((link) => (
          <li>
            <a href={link.href} class="nf-nav-link">
              {link.label}
            </a>
          </li>
        ))
      }
    </ul>

    <div class="nf-header-actions">
      <div class="nf-lang-toggle" aria-label={langToggleAriaLabel}>
        <a
          href={lang === "ro" ? "/ru" : "/"}
          class="nf-btn nf-btn-ghost nf-btn-sm nf-lang-switch"
          aria-label={lang === "ro"
            ? "Переключиться на русский"
            : "Switch to Romanian"}
        >
          {lang === "ro" ? "RU" : "RO"}
        </a>
      </div>

      <a href={lang === "ro" ? "/contact/" : "/ru/contact/"} class="nf-btn nf-btn-primary nf-btn-sm nf-header-cta">
        {lang === "ro" ? "Contact" : "Контакт"}
      </a>

      <button
        type="button"
        class="nf-hamburger"
        aria-label={hamburgerAriaLabel}
        aria-expanded="false"
        aria-controls="nav-menu"
      >
        <span></span><span></span><span></span>
      </button>
    </div>
  </div>
</header>

<script>
  // Header scroll effect
  const header = document.getElementById("header");
  window.addEventListener("scroll", () => {
    if (window.scrollY > 50) {
      header?.classList.add("scrolled");
    } else {
      header?.classList.remove("scrolled");
    }
  });

  // Mobile menu toggle
  const hamburger = document.querySelector(".nf-hamburger");
  const navMenu = document.getElementById("nav-menu");

  hamburger?.addEventListener("click", () => {
    const isExpanded = hamburger.getAttribute("aria-expanded") === "true";
    hamburger.setAttribute("aria-expanded", String(!isExpanded));
    navMenu?.classList.toggle("active");
  });

  // Close menu on link click
  document.querySelectorAll(".nf-nav-link").forEach((link) => {
    link.addEventListener("click", () => {
      hamburger?.setAttribute("aria-expanded", "false");
      navMenu?.classList.remove("active");
    });
  });
</script>
