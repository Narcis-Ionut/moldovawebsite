---
interface Props {
  lang?: "ro" | "ru";
}

const { lang = "ro" } = Astro.props;
const today = new Date();

const serviciiLinks =
  lang === "ro"
    ? [
        { href: "/serviciiBlog/design-web/", label: "Design web" },
        { href: "/serviciiBlog/dezvoltare-web/", label: "Dezvoltare web" },
        { href: "/serviciiBlog/seo-on-page/", label: "SEO on-page" },
        { href: "/serviciiBlog/magazin-online/", label: "Magazin online" },
        { href: "/serviciiBlog/mentenanta/", label: "Mentenanță" },
      ]
    : [
        { href: "/ru/serviciiBlog/design-web/", label: "Веб-дизайн" },
        { href: "/ru/serviciiBlog/dezvoltare-web/", label: "Веб-разработка" },
        { href: "/ru/serviciiBlog/seo-on-page/", label: "SEO-оптимизация" },
        { href: "/ru/serviciiBlog/magazin-online/", label: "Интернет-магазин" },
        {
          href: "/ru/serviciiBlog/mentenanta/",
          label: "Техническая поддержка",
        },
      ];

const companieLinks =
  lang === "ro"
    ? [
        { href: "/about/", label: "Despre" },
        { href: "/blog/", label: "Blog" },
        { href: "/preturi/", label: "Prețuri" },
        { href: "/contact/", label: "Contact" },
        { href: "/termeni/", label: "Termeni" },
        {
          href: "/politica-confidentialitate/",
          label: "Politica de confidențialitate",
        },
      ]
    : [
        { href: "/ru/about/", label: "О нас" },
        { href: "/ru/blog/", label: "Блог" },
        { href: "/ru/preturi/", label: "Цены" },
        { href: "/ru/contact/", label: "Контакты" },
        { href: "/ru/termeni/", label: "Условия" },
        {
          href: "/ru/politica-confidentialitate/",
          label: "Политика конфиденциальности",
        },
      ];

const texts =
  lang === "ro"
    ? {
        brand:
          "Creăm site-uri moderne și rapide pentru afaceri mici – Chișinău & toată Moldova.",
        servicii: "Servicii",
        companie: "Companie",
        contact: "Contact",
        copyright: "moldovawebsite.md. Toate drepturile rezervate.",
        backToTop: "Înapoi sus",
      }
    : {
        brand:
          "Создаём современные и быстрые сайты для малого бизнеса – Кишинёв и вся Молдова.",
        servicii: "Услуги",
        companie: "Компания",
        contact: "Контакты",
        copyright: "moldovawebsite.md. Все права защищены.",
        backToTop: "Наверх",
      };
---

<footer class="nf-footer">
  <div class="container">
    <div class="nf-footer-grid">
      <div class="nf-footer-brand">
        <a href={lang === "ro" ? "/" : "/ru"} class="nf-logo nf-footer-logo">
          <svg
            viewBox="0 0 32 32"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            class="nf-footer-logo-icon"
          >
            <rect width="32" height="32" rx="8" fill="#e50914"></rect>
            <path
              d="M8 12L12 20L16 12L20 20L24 12"
              stroke="white"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
          <span>moldovawebsite.md</span>
        </a>
        <p class="nf-footer-tagline">{texts.brand}</p>
        <div class="nf-footer-social">
          <a
            href="https://facebook.com"
            target="_blank"
            rel="noopener"
            aria-label="Facebook"
          >
            <svg viewBox="0 0 24 24" fill="currentColor"
              ><path
                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
              ></path></svg
            >
          </a>
          <a
            href="https://linkedin.com"
            target="_blank"
            rel="noopener"
            aria-label="LinkedIn"
          >
            <svg viewBox="0 0 24 24" fill="currentColor"
              ><path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path></svg
            >
          </a>
        </div>
      </div>

      <div class="nf-footer-links">
        <h4>{texts.servicii}</h4>
        <ul>
          {
            serviciiLinks.map((link) => (
              <li>
                <a href={link.href}>{link.label}</a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="nf-footer-links">
        <h4>{texts.companie}</h4>
        <ul>
          {
            companieLinks.map((link) => (
              <li>
                <a href={link.href}>{link.label}</a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="nf-footer-contact">
        <h4>{texts.contact}</h4>
        <address>
          <p>
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path
                d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
              ></path>
            </svg>
            <span>Chișinău, str. Ioana Radu 27/2</span>
          </p>
          <p>
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
              ></path>
            </svg>
            <a href="tel:+37361211739">+373 61 211 739</a>
          </p>
          <p>
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
              ></path>
            </svg>
            <a href="mailto:contact@moldovawebsite.md"
              >contact@moldovawebsite.md</a
            >
          </p>
        </address>
      </div>
    </div>

    <div class="nf-footer-bottom">
      <p class="nf-footer-copyright">
        <span class="nf-footer-mark">_</span>
        &copy; {today.getFullYear()}
        {texts.copyright}
      </p>
      <a href="#acasa" class="nf-footer-top" aria-label={texts.backToTop}>
        <svg
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <path d="M4.5 15.75l7.5-7.5 7.5 7.5"></path>
        </svg>
      </a>
    </div>
  </div>

</footer>
